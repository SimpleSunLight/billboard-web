.gg-editor-view .editor-tools {
  display: flex;
}
.gg-editor-view .editor-tools .drag-node {
  width: 170px;
  padding-top: 10px;
  text-align: center;
  border-right: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
}
.gg-editor-view .editor-tools .toolbar {
  display: flex;
  align-items: center;
  padding: 8px;
  border-bottom: 1px solid #e8e8e8;
  border-left: 1px solid #e8e8e8;
  background: #ffffff;
}
.gg-editor-view .editor-tools .toolbar .command span {
  display: inline-block;
  width: 27px;
  height: 27px;
  margin: 0 6px;
  padding-top: 6px;
  text-align: center;
  border: 1px solid #fff;
  cursor: pointer;
}
.gg-editor-view .editor-tools .toolbar .command span:hover {
  border: 1px solid #e8e8e8;
}
.gg-editor-view .editor-tools .toolbar .commandDisabled i {
  color: rgba(0, 0, 0, 0.25);
  cursor: auto;
}
.gg-editor-view .editor-tools .toolbar .commandDisabled i:hover {
  border: 1px solid #fff;
}
.gg-editor-view .detailPanel {
  float: right;
  height: 500px;
  background: #fff;
  transition: width 0.3s ease-in-out;
}
.gg-editor-view .itemPanel {
  float: left;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24px;
  height: 500px;
  background: #ffffff;
  border: 1px solid #e8e8e8;
}
.gg-editor-view .itemPanel .item {
  margin-bottom: 24px;
  user-select: none;
}
.gg-editor-view .itemPanel .item div {
  width: 120px;
  height: 42px;
  display: flex;
  user-select: none;
  border-radius: 5px;
  align-items: center;
  justify-content: center;
  border: 1px solid #4fa4ff;
}
.gg-editor-view .graph {
  height: 500px;
  overflow: hidden;
  position: relative;
  border: 1px solid #e8e8e8;
}
.gg-editor-view .contextMenu {
  background: #ffffff;
  border-radius: 4px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  overflow: hidden;
}
.gg-editor-view .contextMenu .command {
  cursor: pointer;
  display: flex;
  align-items: center;
  padding: 5px 12px;
  transition: all 0.3s;
  user-select: none;
}
.gg-editor-view .contextMenu .command:hover {
  background: #e6f7ff;
}
.gg-editor-view .contextMenu .command span {
  margin-right: 8px;
}
.gg-editor-view .contextMenu .commandDisabled {
  cursor: auto;
  color: rgba(0, 0, 0, 0.25);
}
.gg-editor-view .contextMenu .commandDisabled:hover {
  background: #fff;
}
